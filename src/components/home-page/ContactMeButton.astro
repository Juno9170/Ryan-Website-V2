---
interface Props {
  className: string;
}
const { className } = Astro.props;
import OutArrow from "../../assets/OutArrow.astro";
---

<a class={className} href="/contact">
  <button
    class="shadow-dark-short hover:bg-[#55766B] active:bg-black transition-all duration-200 ease-out w-full h-full rounded-full bg-[#8DB9AA] text-white flex justify-center items-center"
  >
    <div class="text-xs md:text-lg flex gap-2 md:gap-4">
      <p class="apperance-none">Contact Me</p>
      <div class="flex items-center">
        <div class="md:scale-100 scale-[.7]">
          <OutArrow />
        </div>
      </div>
    </div>
  </button>
</a>
